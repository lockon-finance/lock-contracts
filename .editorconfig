# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 200

[*.sol]
indent_size = 4

[*.{js,ts}]
indent_size = 2

[*.{adoc,md}]
max_line_length = 0
trim_trailing_whitespace = false
