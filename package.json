{
  "name": "lockon-contracts",
  "description": "This is the set of Lock Token, Vesting and Staking contracts of lockon protocol",
  "license": "MIT",
  "version": "0.1.1",
  "scripts": {
    "compile": "forge compile",
    "fmt": "forge fmt",
    "lint": "yarn run lint:js ; yarn run lint:sol",
    "lint:fix": "yarn run lint:js:fix ; yarn run lint:sol:fix",
    "lint:js": "prettier --log-level warn --ignore-path .gitignore 'scripts/**/*.{js,ts}' --check ; eslint --ignore-path .gitignore .",
    "lint:js:fix": "prettier --log-level warn --ignore-path .gitignore 'scripts/**/*.{js,ts}' --write ; eslint --ignore-path .gitignore . --fix",
    "lint:sol": "prettier --log-level warn --ignore-path .gitignore 'contracts/**/*.sol' --check ; solhint 'contracts/**/*.sol'",
    "lint:sol:fix": "prettier --log-level warn --ignore-path .gitignore 'contracts/**/*.sol' --write",
    "test": "forge test",
    "coverage": "forge coverage",
    "deploy:dev_goerli": "NODE_ENV=dev npx hardhat run --network goerli",
    "deploy:dev_sepolia": "NODE_ENV=dev npx hardhat run --network sepolia",
    "deploy:stg_polygon": "NODE_ENV=stg npx hardhat run --network polygon",
    "deploy:prod_polygon": "NODE_ENV=prod npx hardhat run --network polygon",
    "deploy:stg_arbitrum": "NODE_ENV=stg npx hardhat run --network arbitrum",
    "deploy:prod_arbitrum": "NODE_ENV=prod npx hardhat run --network arbitrum"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.4",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.4",
    "@openzeppelin/hardhat-upgrades": "^3.0.3",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "10.0.6",
    "@types/node": "^22.16.5",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "chai": "^4.4.1",
    "dotenv": "^16.4.1",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^9.0.0",
    "ethers": "^6.10.0",
    "hardhat": "^2.19.5",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.10",
    "keccak256": "^1.0.6",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1",
    "solhint": "^5.0.3",
    "solidity-coverage": "^0.8.6",
    "ts-node": "^10.9.2",
    "typechain": "^8.2.0",
    "typescript": "^5.3.3"
  },
  "volta": {
    "node": "22.17.1",
    "yarn": "1.22.22"
  }
}
